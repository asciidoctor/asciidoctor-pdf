#!/usr/bin/env ruby
# frozen_string_literal: true

if File.file? (asciidoctor_pdf = File.join (File.dirname __dir__), 'lib/asciidoctor/pdf.rb')
  require asciidoctor_pdf
else
  require 'asciidoctor/pdf'
end
require 'asciidoctor/cli'

# FIXME: provide an API in Asciidoctor for sub-projects to prepend version information
options = (Asciidoctor::Cli::Options.new backend: 'pdf', header_footer: true).extend (Module.new do
  def print_version os = $stdout
    os.write %(Asciidoctor PDF #{Asciidoctor::PDF::VERSION} using )
    super
  end
end)

argv = ARGV
if (theme_idx = argv.index {|it| it == '--theme' || (it.start_with? '--theme=') })
  if (theme_arg = argv[theme_idx]).length > 7
    argv = argv.dup
    argv[theme_idx..theme_idx] = ['-a', %(pdf#{theme_arg.slice 1, theme_arg.length})]
  elsif (val = argv[theme_idx + 1]) && !(val.start_with? '-')
    argv = argv.dup
    argv[theme_idx] = '-a'
    argv[theme_idx + 1] = %(pdf-theme=#{val})
  end
end

# FIXME: This is a really bizarre API. Please make me simpler.
case (result = options.parse! argv)
when Integer
  exit result
else
  invoker = Asciidoctor::Cli::Invoker.new options
  GC.start
  invoker.invoke!
  exit invoker.code
end
